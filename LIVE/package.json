{
  "name": "slopify",
  "version": "1.0.0",
  "description": "The ideomotor effect of software",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "npm run build && live-server --open=index.html",
    "build": "tailwindcss -i ./src/style.css -o ./src/static/css/tailwind.css",
    "build:css": "tailwindcss -i ./src/style.css -o ./src/static/css/tailwind.css --watch",
    "dev": "concurrently \"npm run build:css\" \"npm run start\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DishpitDev/Slopify.git"
  },
  "keywords": [
    "slopify",
    "slop"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/DishpitDev/Slopify/issues"
  },
  "homepage": "https://github.com/DishpitDev/Slopify#readme",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-jsonc": "^2.18.2",
    "globals": "^15.14.0",
    "htmlhint": "^1.1.4",
    "live-server": "^1.2.2",
    "postcss": "^8.4.49",
    "standard": "^17.1.2",
    "stylelint": "^16.12.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.17",
    "typescript-eslint": "^8.19.0"
  },
  "dependencies": {
    "typescript": "^5.7.2"
  }
}
